<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#c2512f"
                android:endColor="#c2512f"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <gradient
                android:endColor="#c2512f"
                android:startColor="#c2512f"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#c2512f"
                android:startColor="#c2512f"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:endColor="#aac2512f"
                android:startColor="#aac2512f"
                android:angle="270" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>
